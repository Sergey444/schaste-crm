{{ use('yii/grid/GridView') }}
{{ use('yii/widgets/Pjax') }}

{{ set(this, 'title', lang('app', 'Contacts')) }}
{{ set(this, 'params', { 'breadcrumbs' : { '' : this.title } }) }}

<div class="order-index">

    {{ pjax_begin() }}

        <div class="bg-white mb-4">
            <div class="row">
                <div class="col-md-6 col-lg-8"> 
                    <div class="row">
                        <div class="col-md-6 col-lg-8">
                            <button class="btn btn-outline-success btn-sm d-none d-md-block" data-toggle="modal" data-target="#createOrder">{{lang('app', 'Create contact')}}</button>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-4"> 
                    {{ this.render('_search.twig', {model: searchModel}) | raw}}
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    {{ html.a(lang('app', 'Create contact'), ['customer/create'], {'class': 'btn btn-outline-success btn-sm d-md-none w-100', 'data-pjax': 0}) | raw }}
                </div>
            </div>
        </div>

        <div class="bg-white">

            {{ grid_view_widget({
                    'dataProvider': dataProvider,
                    'options': {
                        'class': 'table-responsive'
                    },
                    'tableOptions': {
                        'class': 'table table-sm table-striped table-bordered' 
                    },
                    'columns': [
                        {'class': 'yii\\grid\\SerialColumn'},
                        'child_name',
                        'parents_name',
                        {'attribute': 'phone', 'format': ['phone']},
                        'email',
                        {'attribute': 'comment', 'value': 'truncateComment'},
                        {
                            'class': 'yii\\grid\\ActionColumn',
                            'header': '',
                            'template': '{view} {update} {delete}'
                        },
                    ]
                }) 
            }}

        </div>

    {{ pjax_end() }}

</div>


<!-- Modal -->
<div class="modal fade" id="createOrder" role="dialog">
  <div class="modal-dialog modal-lg">

    <!-- Modal content-->
    <div class="modal-content">
        <div class="modal-header">
            <h4 class="modal-title">{{lang('app', 'Create contact')}}</h4>
            <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <div class="modal-body">
             {{ this.render('_form.twig', {model: model}) | raw}}
        </div>
    </div>

  </div>
</div>
