            }) | raw }}
            {% if app.user.can('admin') %}
                {{ html.a(lang('app', 'Delete'), path('delete', {'id': model.id}), {
                    class: 'btn btn-outline-danger btn-sm',
                    data: {
                        confirm: lang('app', 'Are you sure you want to delete this item?'),
                        method: 'post'
                    }
                }) | raw }}
            {% endif %}
        </p>
