{{ use('yii\helpers\Html') }}
{{ use('yii/bootstrap4/ActiveForm') }}

{{ set(this, 'title', 'Регистрация') }}
{{ set(this, 'params', { 'breadcrumbs' : { '' : this.title } }) }}

<div class="site-signup mx-auto">
    <div class="bg-white p-5">
    
        <h3>{{ this.title }}</h3>
        
        <div class="alert alert-primary" role="alert">
            Регистрация доступна только при первом запуске
        </div>

        {% set form = active_form_begin({
            'id' : 'form-signup',
            'options' : {'class' : 'form-horizontal'},
        }) %}

            {{ form.field(model, 'email').textInput({'class': 'form-control form-control-sm'}) | raw }}

            {{ form.field(model, 'name').textInput({'class': 'form-control form-control-sm'}) | raw }}

            {{ form.field(model, 'password').passwordInput({'class': 'form-control form-control-sm'}) | raw }}

            {{ form.field(model, 'password_repeat').passwordInput({'class': 'form-control form-control-sm'}) | raw }}

            <div class="form-group">
                <input type="submit" value="Зарегистрировать" class="btn btn-primary btn-sm" />
            </div>

        {{ active_form_end() }}

    </div>
</div>