{{ use('yii/bootstrap4/ActiveForm') }}

<div class="program-form">

    {% set form = active_form_begin() %}

    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-6">
                    {{ form.field(model, 'name').textInput({'maxlength': true, 'class': 'form-control form-control-sm', 'placeholder': lang('app', 'Enter program name') ~' ...'}) | raw }}
                    {{ form.field(model, 'one_price').textInput({'type': 'number', 'placeholder': lang('app', 'Integer ...'), 'class': 'form-control form-control-sm', 'maxlength': true}) | raw }}
                </div>
                <div class="col-md-6">
                    {{ form.field(model, 'comment').textarea({'rows': 5, 'class': 'form-control form-control-sm', 'placeholder': lang('app', 'Your comment') ~' ...'}) | raw }}
                </div>
            </div>
        </div>
    </div>

    <br>
    <div class="form-group">
         {{ html.submitButton(lang('app', 'Save'), {'class': 'btn btn-outline-success btn-sm'}) | raw }}
    </div>

    {{ active_form_end() }}

</div>