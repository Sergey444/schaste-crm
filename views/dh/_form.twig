{{ use('yii/bootstrap4/ActiveForm') }}

<div class="dh-form">

    {% set form = active_form_begin() %}

    <div class="row">
        <div class="col-md-4">
            {{ form.field(model, 'name').textInput({'maxlength': true, 'class': 'form-control form-control-sm', 'autocomplete': 'off'}) | raw }}
        </div>
        <div class="col-md-4">
            {{ form.field(model, 'host').textInput({'maxlength': true, 'class': 'form-control form-control-sm', 'autocomplete': 'off'}) | raw }}
        </div>
        <div class="col-md-4">
            {{ form.field(model, 'port').textInput({'class': 'form-control form-control-sm', 'autocomplete': 'off'}) | raw }}
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="row">
                <div class="col-md-6">
                    {{ form.field(model, 'login_ftp').textInput({'maxlength': true, 'class': 'form-control form-control-sm', 'autocomplete': 'off'}) | raw }}
                </div>
                <div class="col-md-6">
                    {{ form.field(model, 'password_ftp').textInput({'maxlength': true, 'class': 'form-control form-control-sm', 'autocomplete': 'off'}) | raw }}
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-6">
                    {{ form.field(model, 'login_panel').textInput({'maxlength': true, 'class': 'form-control form-control-sm', 'autocomplete': 'off'}) | raw }}
                </div>
                <div class="col-md-6">
                    {{ form.field(model, 'password_panel').textInput({'maxlength': true, 'class': 'form-control form-control-sm', 'autocomplete': 'off'}) | raw }}
                </div>
            </div>
        </div>
        <div class="col-md-4">
            {{ form.field(model, 'comment').textarea({'rows': 5, 'placeholder': lang('app', 'Your comment') ~' ...', 'class': 'form-control form-control-sm', 'autocomplete': 'off'}) | raw }}
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">{{ form.field(model, 'host_name').textInput({'maxlength': true, 'class': 'form-control form-control-sm', 'autocomplete': 'off'}) | raw }}</div>
        <div class="col-md-4">{{ form.field(model, 'host_login').textInput({'maxlength': true, 'class': 'form-control form-control-sm', 'autocomplete': 'off'}) | raw }}</div>
        <div class="col-md-4">{{ form.field(model, 'host_password').textInput({'maxlength': true, 'class': 'form-control form-control-sm', 'autocomplete': 'off'}) | raw }}</div>
    </div>

    <div class="row">
        <div class="col-md-4">{{ form.field(model, 'db_name').textInput({'maxlength': true, 'class': 'form-control form-control-sm', 'autocomplete': 'off'}) | raw }}</div>
        <div class="col-md-4">{{ form.field(model, 'db_login').textInput({'maxlength': true, 'class': 'form-control form-control-sm', 'autocomplete': 'off'}) | raw }}</div>
        <div class="col-md-4">{{ form.field(model, 'db_password').textInput({'maxlength': true, 'class': 'form-control form-control-sm', 'autocomplete': 'off'}) | raw }}</div>
    </div>

    <div class="row">
        <div class="col-md-6">
            {# <?//= $form.field($model, 'cms_id').textInput() | raw }} #}
        </div>
    </div>

    <div class="form-group">
        {{ html.submitButton(lang('app', 'Save'), {'class': 'btn btn-outline-success btn-sm'}) | raw }}
    </div>

    {{ active_form_end() }}

</div>
